<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/pasturepro</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="com.qy.domain.Address"/>
        <mapping class="com.qy.domain.Admin"/>
        <mapping class="com.qy.domain.Arole"/>
        <mapping class="com.qy.domain.Arolefunction"/>
        <mapping class="com.qy.domain.Images"/>
        <mapping class="com.qy.domain.Orderdetails"/>
        <mapping class="com.qy.domain.Orderform"/>
        <mapping class="com.qy.domain.Ordertype"/>
        <mapping class="com.qy.domain.Shopmsg"/>
        <mapping class="com.qy.domain.Shoptype"/>
        <mapping class="com.qy.domain.User"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>